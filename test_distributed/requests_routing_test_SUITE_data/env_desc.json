{
    "oneprovider_node": {
        "config": {
            "input_dir": "rel/oneprovider_node",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "ccm": {
                "vm.args": {
                    "name": "ccm@",
                    "setcookie": "oneprovider_node"
                },
                "sys.config": {
                    "node_type": "ccm",
                    "ccm_nodes": [ "ccm@" ],
                    "db_nodes": [ "127.0.0.1:49161" ],
                    "workers_to_trigger_init": 2,
                    "notify_state_changes": true
                }
            },
            "worker1": {
                "vm.args": {
                    "name": "worker@",
                    "setcookie": "oneprovider_node"
                },
                "sys.config": {
                    "node_type": "worker",
                    "ccm_nodes": [ "ccm@"],
                    "db_nodes": [ "127.0.0.1:49161" ],
                    "notify_state_changes": true
                }
            }
        }
    }
}
