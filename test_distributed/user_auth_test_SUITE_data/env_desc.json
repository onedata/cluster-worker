{
    "op_ccm" : {
        "config": {
            "input_dir": "rel/op_ccm",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "ccm": {
                "vm.args": {
                    "name": "ccm@",
                    "setcookie": "oneprovider_node"
                },
                "sys.config": {
                    "ccm_nodes": [ "ccm@" ],
                    "worker_num": 2
                }
            }
        }
    },
    "oneprovider_node": {
        "config": {
            "input_dir": "rel/oneprovider_node",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "worker1": {
                "vm.args": {
                    "name": "worker1@",
                    "setcookie": "oneprovider_node"
                },
                "sys.config": {
                    "ccm_nodes": [ "ccm@"],
                    "db_nodes": [ "127.0.0.1:49161" ],
                    "global_registry_node": "gr@"
                }
            },
            "worker2": {
                "vm.args": {
                    "name": "worker2@",
                    "setcookie": "oneprovider_node"
                },
                "sys.config": {
                    "ccm_nodes": [ "ccm@"],
                    "db_nodes": [ "127.0.0.1:49161" ],
                    "global_registry_node": "gr@"
                }
            }
        }
    },
    "appmock": {
        "config": {
            "input_dir": "rel/appmock",
            "target_dir": "rel/test_cluster"
